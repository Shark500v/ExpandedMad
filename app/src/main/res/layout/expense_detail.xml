<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp"
    tools:context="com.polito.madinblack.expandedmad.ExpenseDetailFragment">


    <TextView
        android:id="@+id/balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/balance"
        android:textSize="25sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/balance"
        android:layout_alignTop="@+id/balance"
        android:layout_toEndOf="@+id/amount"
        android:text="75"
        android:textSize="25sp"
        android:gravity="end"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/tag"
        android:textSize="25sp"
        android:layout_below="@+id/balance"/>

    <Spinner
        android:id="@+id/tag_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tag"
        android:layout_toEndOf="@+id/amount"
        android:layout_alignBottom="@+id/tag"
        android:layout_marginEnd="16dp"
        android:entries="@array/tags" />

    <TextView
        android:id="@+id/cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cost"
        android:textSize="25sp"
        android:layout_margin="16dp"
        android:layout_below="@+id/tag"/>

    <TextView
        android:id="@+id/policy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/policy"
        android:textSize="25sp"
        android:layout_margin="16dp"
        android:layout_below="@+id/cost"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:textSize="25sp"
        android:layout_margin="16dp"
        android:layout_below="@+id/policy"/>

    <TextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/currency_spinner"
        android:text="100"
        android:textSize="25sp"
        android:paddingStart="50dp"
        android:layout_alignBottom="@+id/cost"
        android:layout_alignTop="@+id/cost"
        android:paddingEnd="16dp"/>

    <Spinner
        android:id="@+id/currency_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cost"
        android:layout_alignTop="@+id/cost"
        android:entries="@array/currency"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/description_field"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/description"
        android:layout_alignTop="@+id/description"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:textColorHint="@color/secondary_text"
        android:layout_marginEnd="16dp"
        android:hint="@string/type_description_here"
        android:layout_alignBaseline="@+id/description"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/policy"
        android:layout_alignTop="@+id/policy"
        android:layout_toEndOf="@+id/amount"
        android:layout_marginEnd="16dp"
        android:entries="@array/policies"/>

</RelativeLayout>