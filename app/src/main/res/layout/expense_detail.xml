<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp"
    tools:context="com.polito.madinblack.expandedmad.ExpenseDetailFragment">





    <TextView
        android:id="@+id/paid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/paid_topay"
        android:textSize="20sp"


    />

    <TextView
        android:id="@+id/paid_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/paid"
        android:layout_toEndOf="@+id/paid"
        android:text="x/y"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="end"
        android:layout_marginEnd="16dp"


    />

    <TextView
        android:id="@+id/balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/balance"
        android:textSize="20sp"
        android:layout_below="@+id/paid"/>

    <TextView
        android:id="@+id/balance_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/balance"
        android:layout_alignBottom="@+id/balance"
        android:layout_marginEnd="16dp"
        android:text="75"
        android:textStyle="bold"
        android:textAlignment="textEnd"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/tag"
        android:textSize="20sp"
        android:layout_below="@+id/buyer"/>

    <TextView
        android:id="@+id/tag_container"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/tag"
        android:layout_alignBottom="@+id/tag"
        android:layout_marginEnd="16dp"
        android:text="@string/type"
        android:textAlignment="textEnd"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cost"
        android:textSize="20sp"
        android:layout_margin="16dp"
        android:layout_below="@+id/balance"/>

    <TextView
        android:id="@+id/cost_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/cost"
        android:layout_alignBottom="@+id/cost"
        android:layout_marginEnd="16dp"
        android:text="Value"
        android:textStyle="bold"
        android:textAlignment="textEnd"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/buyer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/paid_by"
        android:textSize="20sp"
        android:layout_margin="16dp"
        android:layout_below="@+id/currency"/>

    <TextView
        android:id="@+id/buyer_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/buyer"
        android:layout_alignBottom="@+id/buyer"
        android:layout_marginEnd="16dp"
        android:text="@string/user"
        android:textStyle="bold"
        android:textAlignment="textEnd"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/currency_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/currency"
        android:layout_alignBottom="@+id/currency"
        android:layout_marginEnd="16dp"
        android:text="Euro"
        android:textStyle="bold"
        android:textAlignment="textEnd"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/date"
        android:textSize="20sp"
        android:layout_margin="16dp"
        android:layout_below="@+id/tag"/>

    <TextView
        android:id="@+id/date_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/date"
        android:layout_alignBottom="@+id/date"
        android:layout_marginEnd="16dp"
        android:text="@string/date_format"
        android:textAlignment="textEnd"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/currency"
        android:textSize="20sp"
        android:layout_margin="16dp"
        android:layout_below="@+id/cost"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:textSize="20sp"
        android:layout_margin="16dp"
        android:layout_below="@+id/date"/>

    <TextView
        android:id="@+id/description_field"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/description"
        android:layout_alignTop="@+id/description"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:textColorHint="@color/secondary_text"
        android:layout_marginEnd="16dp"
        android:text="@string/type_description_here"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/description"/>

    <ExpandableListView
        android:id="@+id/expanded_list"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_below="@id/description_field"
        android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
        />





</RelativeLayout>