<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/layout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/layout1"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/imageUser"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/user_pratikshya" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginRight="60dp">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/arrow_bg2" />

            <TextView
                android:id="@+id/name_surname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner_up"
                android:paddingTop="16dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:layout_alignParentLeft="true"
                android:maxLines="1"
                android:text="Name Surname"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:textColor="#000"
                android:layout_alignRight="@+id/textView"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="180dp"
                android:background="@drawable/rounded_cornermezzo"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:text="Android torial with example. sdfis hzi fsdjsidfsdgsfdg"
                android:layout_marginLeft="15dp"
                android:textColor="#000"
                android:layout_below="@id/name_surname" />

            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner_bot"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:paddingBottom="4dp"
                android:text="hh:mm"
                android:textAlignment="textEnd"
                android:layout_marginLeft="15dp"
                android:textColor="#949494"
                android:layout_below="@id/textView"
                android:layout_alignRight="@+id/textView"/>

        </RelativeLayout>

    </FrameLayout>
</LinearLayout>