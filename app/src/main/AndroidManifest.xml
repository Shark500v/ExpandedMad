                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.polito.madinblack.expandedmad.groupMembers.UserExpenses" />
        </activity>

        <activity
            android:name=".ExpenseFillData"
            android:label="Add New Expense"
            android:parentActivityName=".ExpenseListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.polito.madinblack.expandedmad.ExpenseListActivity" />
        </activity>

        <activity android:name=".GoogleSignInActivity"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>

        <activity android:name=".CheckLogIn"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".newGroup.NewGroup"
            android:label="New Group"
            android:parentActivityName=".newGroup.SelectContact"
